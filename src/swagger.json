{
  "openapi": "3.0.0",
  "info": {
    "title": "Todo-list api",
    "version": "1.0.0",
    "description": "Api para el registro de tareas",
    "contact": {
      "email": "teouni_jkdiego@hotmail.com"
    }
  },
  "tags": [
    {
      "name": "users",
      "description": "Create account and authenticate"
    },
    {
      "name": "projects",
      "description": "(objetives, goals)"
    },
    {
      "name": "tasks",
      "description": "operations about tasks"
    }
  ],
  "paths": {
    "/api/v1/users": {
      "post": {
        "tags": ["users"],
        "summary": "create a new user ",
        "requestBody": {
          "description": "Fields to create a new user",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "example": "example@hotmail.com"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User created successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error bad request"
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "summary": "authenticate user ",
        "tags": ["users"],
        "requestBody": {
          "description": "fields to authenticate user",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "example@hotmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123dfg23"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "successful credentials"
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjY2M2MzZTMwLThhZmQtNGQzYi1hN2U5LTYyYmYyOTcwYjIxNyIsImlhdCI6MTY3ODQxMTgzMywiZXhwIjoxNjgzNTk1ODMzfQ.DZdPAZF_IRK6eKxkrlJKGXIUECIejn1dW5uH0lFbais"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "invalid credentials"
          }
        }
      }
    },
    "/api/v1/users/me": {
      "get": {
        "security": [{ "bearerAuth": [] }],
        "summary": "get account data",
        "tags": ["users"],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "My account data"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string",
                          "example": "example@hotmail.com"
                        },
                        "createdAt": {
                          "type": "string",
                          "example": "2023-03-10T01:31:18.118Z"
                        },
                        "updatedAt": {
                          "type": "string",
                          "example": "2023-03-10T01:31:18.118Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error bad request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "patch": {
        "security": [{ "bearerAuth": [] }],
        "summary": "update username ",
        "tags": ["users"],
        "requestBody": {
          "description": "Available field",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "username updated successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error bad request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "delete": {
        "security": [{ "bearerAuth": [] }],
        "summary": "delete account ",
        "tags": ["users"],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "account eliminated"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error bad request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/v1/projects": {
      "post": {
        "security": [{ "bearerAuth": [] }],
        "summary": "crea un nuevo proyecto ",
        "tags": ["projects"],
        "requestBody": {
          "description": "campos para crear un nuevo proyecto",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "required": ["title"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "project created successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error bad request"
          }
        }
      },
      "get": {
        "security": [{ "bearerAuth": [] }],
        "summary": "obtiene todos los proyectos del usuario con sus tareas respectivas ",
        "tags": ["projects"],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "uuid",
                      "example": "19fb11f5-51bb-43de-bed3-9323d9e630df"
                    },
                    "title": {
                      "type": "string",
                      "example": "proyecto 1"
                    },
                    "description": {
                      "type": "string",
                      "example": "Este proyecto es urgente"
                    },
                    "createdAt": {
                      "type": "string",
                      "example": "2023-03-10T01:31:18.118Z"
                    },
                    "updatedAt": {
                      "type": "string",
                      "example": "2023-03-10T01:31:18.118Z"
                    },
                    "tasks": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "uuid",
                            "example": "7291d962-12a0-484f-b9d7-d9ae1d0514e0"
                          },
                          "projectId": {
                            "type": "uuid",
                            "example": "19fb11f5-51bb-43de-bed3-9323d9e630df"
                          },
                          "name": {
                            "type": "string",
                            "example": "tarea 1"
                          },
                          "isComplete": {
                            "type": "boolean",
                            "example": false
                          },
                          "createdAt": {
                            "type": "string",
                            "example": "2023-03-10T01:31:18.118Z"
                          },
                          "updatedAt": {
                            "type": "string",
                            "example": "2023-03-10T01:31:18.118Z"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error bad request"
          }
        }
      }
    },
    "/api/v1/projects/{id}": {
      "patch": {
        "security": [{ "bearerAuth": [] }],
        "summary": "actuliza el título o la descripción de un proyecto ",
        "tags": ["projects"],
        "requestBody": {
          "description": "campos disponibles para actualizar un proyecto",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "id del proyecto",
            "schema": {
              "type": "uuid",
              "example": "19fb11f5-51bb-43de-bed3-9323d9e630df"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "project updated successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error bad request"
          }
        }
      },
      "delete": {
        "security": [{ "bearerAuth": [] }],
        "summary": "Elimina un proyecto con todas sus tareas ",
        "tags": ["projects"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "id del proyecto",
            "schema": {
              "type": "uuid",
              "example": "19fb11f5-51bb-43de-bed3-9323d9e630df"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "project eliminated successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error bad request"
          }
        }
      }
    },
    "/api/v1/projects/{id}/tasks": {
      "post": {
        "security": [{ "bearerAuth": [] }],
        "summary": "Create a task to a particular project ",
        "tags": ["tasks"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "proyect id",
            "schema": {
              "type": "uuid"
            }
          }
        ],
        "requestBody": {
          "description": "Fields to create a new project",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "required": ["name"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Task created successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error bad request"
          }
        }
      }
    },
    "/api/v1/projects/{projectId}/tasks/{taskId}": {
      "patch": {
        "security": [{ "bearerAuth": [] }],
        "summary": "update task status to completed",
        "tags": ["tasks"],
        "requestBody": {
          "description": "Available field",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "isComplete": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "in": "path",
            "name": "projectId",
            "required": true,
            "schema": {
              "type": "uuid"
            }
          },
          {
            "in": "path",
            "name": "taskId",
            "required": true,
            "schema": {
              "type": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "task status updated successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error bad request"
          }
        }
      },
      "delete": {
        "security": [{ "bearerAuth": [] }],
        "summary": "delete a task to a particular project ",
        "tags": ["tasks"],
        "parameters": [
          {
            "in": "path",
            "name": "projectId",
            "required": true,
            "schema": {
              "type": "uuid"
            }
          },
          {
            "in": "path",
            "name": "taskId",
            "required": true,
            "schema": {
              "type": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Task eliminated successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error bad request"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
